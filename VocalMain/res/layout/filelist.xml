<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/linearLayout1"
		android:orientation="vertical" android:layout_weight="1">
		<ListView android:layout_height="wrap_content" android:id="@android:id/list"
			android:layout_width="match_parent"></ListView>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/linearLayout2"
		android:orientation="horizontal" android:layout_weight="0"
		android:layout_gravity="center">
		<Button android:layout_height="wrap_content" android:layout_gravity="center" android:layout_weight="1" android:id="@+id/file_play_btn" android:text="@string/play" android:layout_width="0dip"></Button>
		<Button android:layout_height="wrap_content" android:layout_gravity="center"
			android:layout_weight="1" android:id="@+id/file_stop_btn" android:text="@string/stop_recording" android:layout_width="0dip"></Button>
	</LinearLayout>

</LinearLayout>
